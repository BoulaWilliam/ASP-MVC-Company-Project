@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>Department Details</h1>

<div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" readonly></input>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" readonly></input>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" readonly></input>
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <a asp-action="Index" class="btn btn-outline-success">Back To List</a>

</div>

