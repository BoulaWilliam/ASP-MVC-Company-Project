@model EmployeeViewModel1
@inject IUnitOfWork UnitOfWork
@{
    var departments = new SelectList(await UnitOfWork.DepartmentRepository.GetAll(), "Id", "Name");
}

<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name"></input>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age"></input>
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

